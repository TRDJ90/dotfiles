# Themes
background = 181818
unfocused-split-opacity = 0.4
unfocused-split-fill = 000000

# general
confirm-close-surface = false
font-size = 15

# General keybinds
keybind = ctrl+r=reload_config
keybind = super+w>q=close_surface

# window split keybinds
keybind = super+w>[=new_split:right
keybind = super+w>]=new_split:down

keybind = super+w>h=goto_split:left
keybind = super+w>l=goto_split:right
keybind = super+w>k=goto_split:bottom
keybind = super+w>j=goto_split:top

keybind = super+w>z=toggle_split_zoom

# tab keybinds
keybind = super+t>c=new_tab
keybind = super+t>n=next_tab
keybind = super+t>p=previous_tab

keybind = super+t>h=move_tab:-1
keybind = super+t>l=move_tab:+1
